def dict(char):
    if char == 'a' : return 'Apple'
    if char == 'b' : return 'Ball'
    if char == 'c' : return 'Cat'
    if char == 'd' : return 'Dog'
def entry():
    char=input('Letter for dictionary')
    print(dict(char.lower()))
    Choice=input("Choice num")
    if Choice == '1': entry()
    elif Choice == '-1': exit()
Choice=input("Choice num")
if Choice == '1': entry()

elif Choice == '-1': exit()
